{
  "name": "@incutonez/brewhaus",
  "version": "0.0.1",
  "type": "module",
  "author": "incutonez@hotmail.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/incutonez/brewhaus.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build --mode=GitHubPages",
    "preview": "vite preview",
    "lint": "npx eslint --fix",
    "update:deps": "node ./updateDependencies.js",
    "update:versions": "node ./updateVersions.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@material-symbols/svg-400": "^0.31.2",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@eslint/js": "latest",
    "@incutonez/eslint-plugin": "^2.1.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@stylistic/eslint-plugin-ts": "^4.2.0",
    "@tailwindcss/vite": "^4.1.6",
    "@types/node": "^22.15.17",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/tsconfig": "^0.7.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "eslint": "^9.26.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vue": "^10.1.0",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "semantic-release": "^24.2.3",
    "tailwindcss": "latest",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.3.5",
    "vite-svg-loader": "^5.1.0",
    "vue-tsc": "^2.2.10"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,jsx,ts,tsx,vue}": [
      "npx eslint --fix"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
